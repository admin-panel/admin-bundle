<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin.context.list.class">AdminPanel\Symfony\AdminBundle\Admin\CRUD\Context\ListElementContext</parameter>
        <parameter key="admin.context.list.request_handler.datasource_bind_parameters.class">AdminPanel\Symfony\AdminBundle\Admin\CRUD\Context\Request\DataSourceBindParametersHandler</parameter>
        <parameter key="admin.context.list.request_handler.datagrid_set_data.class">AdminPanel\Symfony\AdminBundle\Admin\CRUD\Context\Request\DataGridSetDataHandler</parameter>
        <parameter key="admin.context.list.request_handler.datagrid_bind_data.class">AdminPanel\Symfony\AdminBundle\Admin\CRUD\Context\Request\DataGridBindDataHandler</parameter>
    </parameters>

    <services>
        <service id="admin.context.list" class="%admin.context.list.class%">
            <argument type="collection">
                <argument type="service" id="admin.context.list.request_handler.datasource_bind_params"/>
                <argument type="service" id="admin.context.list.request_handler.datagrid_set_data"/>
                <argument type="service" id="admin.context.list.request_handler.datagrid_bind_data"/>
            </argument>
            <tag name="admin.context"/>
        </service>

        <service id="admin.context.list.request_handler.datasource_bind_params"
                 class="%admin.context.list.request_handler.datasource_bind_parameters.class%">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="admin.context.list.request_handler.datagrid_set_data"
                 class="%admin.context.list.request_handler.datagrid_set_data.class%">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="admin.context.list.request_handler.datagrid_bind_data"
                 class="%admin.context.list.request_handler.datagrid_bind_data.class%">
            <argument type="service" id="event_dispatcher"/>
        </service>

    </services>
</container>
