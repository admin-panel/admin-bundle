{% extends '@AdminPanel/CRUD/datagrid.html.twig' %}

{% block datagrid_column_type_admin_panel_file_cell %}
    {% spaceless %}
        <td{{ block('datagrid_cell_attributes') }}>
            <div{{ block('datagrid_container_attributes') }}>
                {{ block('datagrid_column_cell_form_link') }}
                {% for val in cell.value %}
                    {% if val is not empty %}
                        <a href="{{ admin_panel_file_url(val) }}"
                           target="_blank"{{ block('datagrid_value_attributes') }}>{{ val|admin_file_basename }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </td>
    {% endspaceless %}
{% endblock %}

{% block datagrid_column_type_admin_panel_image_cell %}
    {% spaceless %}
        <td{{ block('datagrid_cell_attributes') }}>
            <div{{ block('datagrid_container_attributes') }}>
                {{ block('datagrid_column_cell_form_link') }}
                {% for val in cell.value %}
                    {% if val is not empty %}
                        <a href="{{ admin_panel_file_url(val) }}" target="_blank"{{ block('datagrid_value_attributes') }}>
                            <img src="{{ admin_panel_file_url(val) }}" style="width: {{ cell.attributes.width }}px"/>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </td>
    {% endspaceless %}
{% endblock %}
